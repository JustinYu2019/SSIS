<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StoreClerkDisbursementDetailActivity">

    <LinearLayout
        android:id="@+id/topRowDisDet"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textDisburseDetail"
                android:text="@string/DisbursementList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="140dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/LogoutDisburseDetail"
                android:text="@string/Logout"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/deptName"
                android:text="department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/deptRep"
                android:text="DeptRep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="120dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/deptCode"
                android:text="No Disbursement Found"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/deptContact"
                android:text="DeptContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="120dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/collectionPoint"
                android:text="Collection Point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/chart_layoutDisburse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/AcknowledgeDescriptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:text="Reason for the change: "
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/disbursementRemark"
            android:hint="Please enter reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/AcknowledgeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/confirmDis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/orange"
                android:textColor="@color/white"
                android:text="Confirm Quantity" />

            <Button
                android:id="@+id/ApproveDis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/green"
                android:textColor="@color/white"
                android:text="Acknowledge" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>